@model List<Bibliotekar>
@{
}

<h2>Bibliotekari</h2>

    <form asp-action="Search">
        <div class="class-group">
            <label for="searchTerm" class="control-label"></label>
            <input name="searchTerm" class="form-control" />
        </div>
        <button type="submit" value="Search" class="btn btn-primary btn-search">Search</button>
    </form>


<table class="table">
    <thead>
        <tr>
            <th>Ime i prezime</th>
            <th>Email</th>
            <th>Tip korisnika</th>
            <th>Zadnji pristup sistemu</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var bibliotekar in Model)
        {
            <tr>
                <td>@bibliotekar.Name</td>
                <td>@bibliotekar.Email</td>
                <td>@bibliotekar.UserType.Name</td>
                <td>@bibliotekar.Last_login_at.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@bibliotekar.Id">Izmeni</a> |
                    <a asp-action="Details" asp-route-id="@bibliotekar.Id">Detalji</a> |
                    <a asp-action="Delete" asp-route-id="@bibliotekar.Id">Izbrisi</a>
                </td>

            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Dodaj bibliotekara</a>