                @Html.DisplayFor(modelItem => item.PageCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LetterId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LanguageId)
            </td>
